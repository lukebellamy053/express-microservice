{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "outDir": "dist",
    "sourceRoot": "src",
    "lib": [
      "es2018"
    ]
  },
  "exclude": [
    "test",
    "node_modules",
    "**/*.d.ts"
  ]
}